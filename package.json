{
  "name": "@sylphx/molt",
  "version": "0.1.0",
  "private": true,
  "description": "High-performance data transformation stack for JSON, XML, YAML and more",
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "bench": "bun run --filter '@sylphx/molt-json' bench",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "bun run --filter '*' typecheck",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylphx/molt.git"
  },
  "bugs": {
    "url": "https://github.com/sylphx/molt/issues"
  },
  "homepage": "https://github.com/sylphx/molt#readme",
  "author": "Sylphx",
  "license": "MIT"
}
